\setbeamercolor{headline}{fg=kaldigray,bg=white}
\setbeamercolor{footline}{fg=kaldigray, bg=white}
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=kaldigray}
\setbeamercolor{title in headline}{fg=kaldibrown}
\setbeamercolor{author in headline}{fg=kaldigray}
\setbeamercolor{institute in headline}{fg=kaldibrown}

\setbeamercolor{framesubtitle}{fg=kaldibrown, bg=kaldilightgray} % may not matter
