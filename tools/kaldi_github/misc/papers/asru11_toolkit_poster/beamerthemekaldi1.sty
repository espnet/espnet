\setbeamercolor{title in head/foot}{fg=kaldigray, bg=white}

\setbeamercolor*{normal text}{fg=black, bg=kaldibrowngray}
\setbeamercolor*{block body}{fg=black,bg=white}
\setbeamercolor*{block title}{fg=kaldibrown,bg=kaldilightgray}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=kaldigray}

\setbeamercolor*{example body}{fg=kaldiblack,bg=white} % dont' know what used for.
