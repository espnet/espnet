{
    "train_batch_size": 32,
    "gradient_accumulation_steps": 1,
    "gradient_clipping": 1.0,
    "bf16": {
      "enabled": true
    },
    "zero_optimization": {
      "stage": 2,
      "contiguous_gradients": true,
      "overlap_comm": true,
      "reduce_scatter": true,
      "reduce_bucket_size": 5e8,
      "allgather_bucket_size": 5e8,
      "offload_optimizer": {
        "device": "cpu",
        "pin_memory": true
      }
    },
    "optimizer": {
      "type": "Adam",
      "params": {
        "lr": 0.0005,
        "betas": [
          0.9,
          0.95
        ],
        "eps": 1e-6,
        "weight_decay": 3e-7,
        "adam_w_mode": true
      }
    },
    "scheduler": {
      "type": "WarmupLR",
      "params": {
          "warmup_min_lr": 0,
          "warmup_max_lr": 0.0005,
          "warmup_num_steps": 30000
      }
    },
    "wall_clock_breakdown": false,
    "steps_per_print": 1000
  }
