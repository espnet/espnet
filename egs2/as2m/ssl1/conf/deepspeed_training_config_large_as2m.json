{
    "train_micro_batch_size_per_gpu": 1,
    "gradient_accumulation_steps": 1,
    "gradient_clipping": 1.0,
    "bf16": {
      "enabled": true
    },
    "optimizer": {
      "type": "Adam",
      "params": {
        "lr": 1.0e-4,
        "betas": [
          0.9,
          0.98
        ],
        "eps": 1e-12,
        "weight_decay": 1.0e-2,
        "adam_w_mode": true
      }
    },
    "scheduler": {
      "type": "WarmupDecayLR",
      "params": {
        "warmup_type": "linear",
        "total_num_steps": 400000,
        "warmup_num_steps": 32000,
        "warmup_max_lr": 1.0e-4,
        "warmup_min_lr": 1.0e-5
      }
    },
    "wall_clock_breakdown": false,
    "steps_per_print": 1000
  }