
{
    "train_micro_batch_size_per_gpu": 1,
    "gradient_accumulation_steps": 3,
    "gradient_clipping": 1.0,
    "bf16": {
      "enabled": true
    },
    "optimizer": {
      "type": "Adam",
      "params": {
        "lr": 0.0005,
        "betas": [
          0.9,
          0.95
        ],
        "eps": 1e-8,
        "weight_decay": 3e-7,
        "adam_w_mode": true
      }
    },
    "scheduler": {
      "type": "WarmupLR",
      "params": {
          "warmup_min_lr": 0,
          "warmup_max_lr": 0.0005,
          "warmup_num_steps": 70000
      }
    },
    "wall_clock_breakdown": false,
    "steps_per_print": 1000
  }
